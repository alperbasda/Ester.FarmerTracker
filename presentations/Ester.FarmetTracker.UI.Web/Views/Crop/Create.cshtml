@using Ester.FarmetTracker.UI.Web.Infrastructures.FieldService.Models.Crops;

@{
    ViewData["Title"] = "Ekin Ekle";

}

@model CreateCropRequest

<div class="card">
    <!--begin:Card Header-->
    <div class="card-header">
        <!--begin:Card Title-->
        <div class="card-title">
            <!--begin::Breadcrumb-->
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <!--begin::Item-->
                <li class="breadcrumb-item">
                    <a class="text-primary" href="@Url.Action("Index","Home")">Anasayfa</a>
                </li>
                <!--end::Item-->
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <!--begin::Item-->
                <li class="breadcrumb-item">
                    <a class="text-primary" href="@Url.Action("Index","Crop")">Ekin Listesi</a>
                </li>
                <!--end::Item-->
                <li class="breadcrumb-item">
                    <span class="bullet bg-gray-400 w-5px h-2px"></span>
                </li>
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">
                    Ekin Oluştur
                </li>
                <!--end::Item-->
            </ul>
            <!--end::Breadcrumb-->
        </div>
        <!--end:Card Title-->
        <!--begin::Toolbar container-->
        <div class="card-toolbar">
            <div class="card-toolbar">
                <ul class="nav nav-tabs nav-line-tabs nav-stretch fs-6 border-0">
                    <li class="nav-item">
                        <a href="@Url.Action("Index","Crop")" class="btn btn-sm fw-bold btn-secondary">Ekin listesi</a>
                    </li>
                </ul>
            </div>
        </div>
        <!--end::Toolbar container-->

    </div>
    <!--end:Card Header-->
    <!--begin::Card Body container-->
    <div class="card-body">

        <div class="d-flex flex-column flex-column-fluid">

            <div id="kt_app_content" class="app-content flex-column-fluid">
                <form asp-controller="Crop" asp-action="Create" method="post">

                    <div class="form-floating mb-7 row justify-content-center">

                        <div class="col-lg-6 col-md-12">
                            <label for="CropId">Ad</label>
                            @Html.TextBoxFor(w => w.Name, new { @class = "form-control", @id = "Name" })
                        </div>

                    </div>

                    <div class="form-floating mb-7 row justify-content-center">

                        <div class="col-lg-6 col-md-12">
                            <label for="CropId">Açıklama</label>
                            @Html.TextAreaFor(w => w.Description, new { @class = "form-control", @id = "Description", rows = "3" })
                        </div>
                    </div>

                    <div class=" pt-5 text-center">
                        <button class=" btn btn-primary" type="submit">
                            Kaydet
                        </button>

                    </div>

                </form>
            </div>


        </div>
    </div>
    <!--end::Card Body container-->

</div>

