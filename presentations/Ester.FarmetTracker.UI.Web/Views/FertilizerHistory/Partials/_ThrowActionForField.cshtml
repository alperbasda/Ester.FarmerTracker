@using Ester.FarmetTracker.UI.Web.Infrastructures.FertilizerService.Models.FertilizerHistories
@using Ester.FarmetTracker.UI.Web.Infrastructures.FertilizerService.Models.Fertilizers

@model CreateFertilizerHistoryRequest

@{
    var fertilizers = ViewData["Fertilizers"] as List<ListCustomerFertilizerResponse>;
}


<div class="card w-100">
    <!--begin:Card Header-->
    <div class="card-header">
        <!--begin:Card Title-->
        <div class="card-title">
            <!--begin::Breadcrumb-->
            <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                <!--begin::Item-->
                <li class="breadcrumb-item text-muted">
                    Gübre At
                </li>
                <!--end::Item-->
            </ul>
            <!--end::Breadcrumb-->
        </div>
        <!--end:Card Title-->
    </div>
    <!--end:Card Header-->
    <!--begin::Card Body container-->
    <div class="card-body">
        <form asp-controller="FertilizerHistory" asp-action="Create" method="post">
            <input type="hidden" value="@Model.ActionRequest.Throw!.FieldId" name="ActionRequest.Throw.FieldId" />

            <div class="form-floating mb-7 row justify-content-center">

                <div class="col-lg-6 col-md-12">
                    <label for="FertilizerId">Gübre</label>
                    <select class="form-control form-control-sm" name="FertilizerId">
                        @foreach (var item in fertilizers!)
                        {
                            <option value="@item.Id"> @item.Text </option>
                        }

                    </select>
                </div>

            </div>

            <div class="form-floating mb-7 row justify-content-center">

                <div class="col-lg-6 col-md-12">
                    <label for="Amount">Miktar</label>
                    @Html.TextBoxFor(w => w.ActionRequest.Throw!.Amount, new { @class = "form-control", @id = "Amount", type = "number" })
                </div>

            </div>

            <div class=" pt-5 text-center">
                <button class=" btn btn-primary" type="submit">
                    Kaydet
                </button>

            </div>

        </form>
    </div>
    <!--end::Card Body container-->

</div>
